@{
    ViewData["Title"] = "Home Page";
	
}



<div class="text-center">
  
 @if(ViewBag.usuarios.Count == 0){
 
 <div class="alert alert-warning" role="alert">
		<h1>Actualmente usted no tiene ningun usuario registrado.</h1>

</div>


}else{  
 <div class="table-responsive-sm">


 <table  class="table">
  
  <thead class="thead-dark" >
  
  <tr>
  <th scope="col">
   Nombre
  </th>
  <th scope="col">
   Apellido paterno
  </th>
   <th scope="col">
   Apellido materno
  </th>
   <th scope="col">
   Correo
  </th>
   <th scope="col">
   Fecha de nacimiento
  </th>
   <th scope="col">
   Acciones
  </th>
  </tr>
  
  </thead>
  
  <tbody>
  
   
  @foreach(var item in ViewBag.usuarios){
	 <tr>
	 
	   <td>
  @item.Nombre
  </td>
	  <td>
  @item.ApellidoP
  </td>
  	  <td>
  @item.ApellidoM
  </td>
  	  <td>
  @item.Correo
  </td>
  	  <td>
  @item.FechaNacimeinto
  </td>
  	  <td>
      <a href="/Crud/Leer/@item.Id" class="btn btn-success">Leer</a>
  <a href="/Crud/Eliminar/@item.Id" class="btn btn-danger">Eliminar</a>
<a href="/Crud/Editar/@item.Id" class="btn btn-warning">Editar</a>
  </td>
 
	
 </tr>
 }
 


  
  
  </tbody>
  
  
 
  
    
  </table>
  
 @if(ViewBag.totalR>5){

<nav aria-label="Page navigation example">
  <ul class="pagination">
  @if(ViewBag.re){
    <li class="page-item">
      <a class="page-link" href="/Crud/Listar/@ViewBag.hasta/-1" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
	}
    <li class="page-item active"> <a class="page-link" href="#">Página @ViewBag.pag de @ViewBag.totalP</a></li>

	@if(ViewBag.av){
	
	<li class="page-item">
      <a class="page-link" href="/Crud/Listar/@ViewBag.desde/1" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
	}
	
  </ul>
</nav>
  
}
</div>
 
 }
 
</div>
