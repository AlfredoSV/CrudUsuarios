@{
    ViewData["Title"] = "Editar información de usuario";
}

@model CrudUsuarios.Models.Usuario


<h1>@ViewData["Title"]</h1>

@if(ViewBag.exitoE){
	<div class="alert alert-success" role="alert">
		Se editó con exito en la base de datos
	</div>
}else{

    

<form asp-controller="Crud" method="post" asp-action="Editar">
  <div class="form-group">
    <label>Nombre(s)</label>
    <input asp-for="Nombre" class="form-control" >
	
	 <span class="text-danger" asp-validation-for="Nombre">
          
     </span>

    
  </div>
  <div class="form-group">
    <label>Apellido paterno</label>
    <input asp-for="ApellidoP"  class="form-control" >
    <span class="text-danger"  asp-validation-for="ApellidoP">
          
     </span>
  </div>
   <div class="form-group">
    <label>Apellido materno</label>
    <input asp-for="ApellidoM"  class="form-control" >
	<span class="text-danger"  asp-validation-for="ApellidoM">
          
     </span>
  </div>
   <div class="form-group">
    <label >Correo electronico</label>
    <input asp-for="Correo" class="form-control" >
	<span class="text-danger"  asp-validation-for="Correo">
          
     </span>
  </div>
   <div class="form-group">
    <label>Fecha de nacimiento</label>
    <input asp-for="FechaNacimeinto" type="date" class="form-control"  >
	<span  class="text-danger" asp-validation-for="FechaNacimeinto">
          
     </span>
  </div>
  
   <div class="form-group">
    <label >Acerca de mí</label>
    <textarea  asp-for="AcercaDeMi" cols="40" rows="6" class="form-control"  ></textarea>
	<span class="text-danger" asp-validation-for="AcercaDeMi">
          
     </span>
  </div>
  <button type="submit" class="btn btn-success btn-block">Editar</button>
</form>




}



